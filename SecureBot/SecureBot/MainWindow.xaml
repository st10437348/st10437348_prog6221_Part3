<Window x:Class="SecureBot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SecureBot" Height="600" Width="500"
        Background="#1E1E1E" Foreground="White"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="LightGreen"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="5" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#505050"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,10,0,10">
            <TextBlock Text="SecureBot" Foreground="LightGreen" FontSize="50" FontWeight="Bold" TextAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect Color="LightGreen" BlurRadius="10" ShadowDepth="0" Opacity="0.6"/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBlock Text="Your Secure AI Assistant" Foreground="#CCCCCC" FontSize="16" FontStyle="Italic" TextAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>
        <ScrollViewer x:Name="ChatScrollViewer" Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="#252526" Margin="0,0,0,10" Padding="10">
            <StackPanel x:Name="ChatPanel" Margin="5" />
        </ScrollViewer>
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,10">
            <TextBox x:Name="UserInputTextBox" Width="340" Height="35" FontSize="14" KeyDown="UserInputTextBox_KeyDown" Background="#333" Foreground="White" Padding="8" BorderThickness="1" BorderBrush="#555" Margin="5"/>

            <Button x:Name="SendButton" Content="Send" Width="100" Height="35" Click="SendButton_Click"/>
        </StackPanel>
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,10">
            <Button x:Name="TasksButton" Content="Tasks" Width="100" Click="TasksButton_Click"/>

            <Button x:Name="QuizButton" Content="Quiz" Width="100" Click="QuizButton_Click"/>

            <Button x:Name="ShowActivityLogButton" Content="Show Activity Log" Width="150" Click="ShowActivityLogButton_Click"/>
        </StackPanel>
        <Image HorizontalAlignment="Right" Height="100" VerticalAlignment="Center" Width="100" Source="/mirror.PNG"/>
        <Image HorizontalAlignment="Left" Height="100" VerticalAlignment="Center" Width="100" Source="/aa93c104-8d92-41ad-a245-a754bfda9127.png"/>
    </Grid>
</Window>



